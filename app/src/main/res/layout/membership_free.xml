<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/membership_toolbar"
        android:background="@color/color_Clear"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/netflix_check"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3단계"
            android:textColor="@color/colorBlack"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원하는 멤버쉽을 선택하세요"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"

            >
        </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/netflix_simple_check"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료 이용이 종료되기 전까지는 요금이\n청구되지 않습니다."
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="15dp"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/netflix_simple_check"

                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료 이용 종료 3일 전에 알림 이메일을\n보내드립니다."
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="15dp"
                >
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/netflix_simple_check"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무약정으로 언제든지 해지하실 수 있습니다."
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="15dp"
                >

            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/membership_btn_paymen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_NetflixRed"
            android:text="멤버쉽 요금제 보기"
            android:textColor="@color/colorWhite"
            android:layout_above="@id/empty_space"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:onClick="onClickNext"

            >

        </Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/empty_space"
            android:layout_alignParentBottom="true"
            >

        </TextView>

    </LinearLayout>
</LinearLayout>