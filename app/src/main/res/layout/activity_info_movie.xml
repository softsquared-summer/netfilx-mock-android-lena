<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNetflicBack">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/youtube_view"
            android:background="@color/colorNetflicBack"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/movie_title_detail"
            android:text="title"
            android:paddingTop="10dp"
            android:layout_marginBottom="5dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/ColorMatchPercent"
            android:text="90% 일치"
            android:id="@+id/movie_match_percent"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/ColorMovieRelease"
            android:id="@+id/movie_detail_release_date"
            android:paddingTop="5dp"
            android:text="release_data"
            android:layout_marginRight="10dp"
            >
        </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ColorRunningTime"
                android:text="movie_detail_running time"
                android:id="@+id/movie_detail_running_time"
                android:textSize="10sp"
                />
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/ColorMovieRelease"
            android:id="@+id/movie_detail_overview"
            android:paddingTop="5dp"
            android:text="overview"
            android:layout_marginBottom="10dp"
            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출연:Dane Cook, Jessica Simpson, Dax Shepard"
            android:textColor="@color/ColorMovieRelease"
            android:textSize="11sp"
            android:id="@+id/movie_detail_cast"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감독:Greg Coolidge"
            android:textColor="@color/ColorMovieRelease"
            android:textSize="11sp"
            android:id="@+id/movie_detail_director"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add_white"
                android:layout_gravity="center"
                android:id="@+id/movie_plus"
                android:clickable="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ColorMovieRelease"
                android:text="내가 찜한 콘텐츠"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                >

            </TextView>
        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_thumb_up_white"
                    android:layout_gravity="center"
                    android:id="@+id/movie_thumb_up"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ColorMovieRelease"
                    android:text="평가"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_share_white"
                    android:layout_gravity="center"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ColorMovieRelease"
                    android:text="공유"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/movie_share"
                    >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_save_bottom_white"
                    android:layout_gravity="center"
                    android:id="@id/movie_share"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ColorMovieRelease"
                    android:text="저장"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"

                    >

                </TextView>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:paddingTop="10dp"
            android:text="비슷한 콘텐츠"
            android:textSize="10dp"
            android:paddingBottom="10dp"
            >

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/movie_similar_recycler"
            >

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </TextView>

    </LinearLayout>


</ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_menu_bottom_navi"
        app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationView"
        app:menu="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:itemBackground="@color/colorBottomNavi"
        app:itemTextColor="@drawable/select_bottom_navigation"
        app:itemIconTint="@drawable/select_bottom_navigation"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        >

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>