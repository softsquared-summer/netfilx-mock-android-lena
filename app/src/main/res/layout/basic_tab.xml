<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료 이용 종료 (2020년 3월 20일 (수)) 후 월 요금"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="9500원"
                    android:textColor="@color/color_NetflixRed"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12000원"
                    android:textColor="@color/Color_login_on"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="14500원"
                    android:textColor="@color/Color_login_on"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    >
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영상 화질"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:padding="10dp"

                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="좋음\n HD"
                    android:textAlignment="center"
                    android:textColor="@color/color_NetflixRed"

                    ></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="매우 좋음\n풀 HD"
                    android:textColor="@color/Color_login_on"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="가장 좋음\n4K+HDR"
                    android:textColor="@color/Color_login_on"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    >
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HER 화질 지원"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:padding="10dp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                >

              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:src="@drawable/x"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  >

              </ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/x_off"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    ></ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/x_off"
                    android:layout_weight="1"
                    ></ImageView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동시접속 수"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:padding="10dp"

                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/color_NetflixRed"

                    ></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/Color_login_on"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/Color_login_on"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    >
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="노트북, TV, 스마트폰 태블릿으로 시청"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:padding="10dp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_on"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_off"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    ></ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_off"
                    android:layout_weight="1"
                    ></ImageView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="언제든 해지 가능"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:padding="10dp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_on"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_off"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    ></ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_off"
                    android:layout_weight="1"
                    ></ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="첫 달 무료 이용"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:padding="10dp"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:padding="10dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_on"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_off"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    ></ImageView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/check_off"
                    android:layout_weight="1"
                    ></ImageView>

            </LinearLayout>


        </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>