<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_Clear"
    >
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/netflix_logo"
        android:id="@+id/netflix_logo"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        >
    </ImageView>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    >

</LinearLayout>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_Clear"
        android:text="고객센터"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@id/viewpager_btn_login"
        android:id="@+id/viewpager_btn_customer_center"
        android:onClick="onPersonalCenterClick"
        android:layout_weight="1"
        >

    </Button>

    <Button
        android:id="@+id/viewpager_btn_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-1dp"
        android:background="@color/color_Clear"
        android:text="로그인"
        android:textColor="@color/colorBlack"
        android:onClick="onLoginButtonClick"
        android:layout_weight="1"
        >

    </Button>
</LinearLayout>

</LinearLayout>