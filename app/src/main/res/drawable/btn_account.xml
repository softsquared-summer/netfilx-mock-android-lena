<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_Clear">
            </solid>
            <stroke
                android:color="@color/ColorBlue"
                android:width="1dp"
                >
            </stroke>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <corners android:radius="5dp">
            </corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_Clear">
            </solid>
            <stroke
                android:color="@color/ColorBlue"
                android:width="1dp"
                >
            </stroke>
            <corners android:radius="5dp">
            </corners>
        </shape>
    </item>


    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_Clear"
                >
            </solid>
            <stroke
                android:color="@color/colorItem"
                android:width="1dp"
                >
            </stroke>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <corners android:radius="5dp">
            </corners>

        </shape>
    </item>



</selector>